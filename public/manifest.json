{
  "manifest_version": 3,
  "name": "Charlie",
  "description": "Chat with ChatGPT",
  "version": "1.0",
  "action": {
    "default_popup": "popup.html"
  },
  "options_page": "./options.html",
  "content_scripts": [
    {
      "matches": ["https://*.google.com/*", "https://www.youtube.com/watch?*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icon.png",
    "32": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "permissions": ["tabs", "storage"]
}
